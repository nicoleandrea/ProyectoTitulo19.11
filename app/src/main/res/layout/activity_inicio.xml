<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/material_blue_grey_900"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Inicio">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="INICIAR SESIÃ“N"
        android:id="@+id/btn_iniciar"
        android:textSize="14sp"
        android:onClick="iniciarSesion"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/btn_registro" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="REGISTRARSE"
        android:id="@+id/btn_registro"
        android:onClick="registroUsuario"
        android:textSize="14sp"
        android:layout_above="@+id/btn_iniciar"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@mipmap/logoapp4"
        android:layout_marginBottom="27dp"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Smart Coming"
        android:textStyle="bold"
        android:id="@+id/textView"
        android:layout_above="@+id/btn_registro"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="151dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Planifica tu llegada con inteligencia"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp" />

</RelativeLayout>
